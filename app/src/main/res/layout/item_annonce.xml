<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="#4AF8DA8F"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="5dp"
    android:layout_margin="16dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/trans_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/facebook"
            app:civ_border_width="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            app:civ_border_color="#D34DFA02"/>

        <TextView
            android:id="@+id/typeTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="15dp"
            android:text="Facture Internet"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/Ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tauxTrans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="299,00"/>

            <TextView
                android:id="@+id/dateTrans"
                android:text="09/10/18"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/Age"
                android:text="09/10/18"
                android:layout_below="@+id/Ll"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textSize="16dp"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@+id/Ll">
        <TextView
            android:id="@+id/boujem3aAge"
            android:text="HEURE"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/more"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/plus"
                app:civ_border_width="1dp"
                android:layout_alignParentRight="true"
                app:civ_border_color="#AFB42B"/>
        </RelativeLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>

