<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AjouterAnnonceActivity">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/propro"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/maintoolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#80182929">
    <EditText
        android:id="@+id/titre"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="40dp"
        android:hint="Niveau scolaire"
        android:background="@drawable/shape"
        android:textColorHint="#80FFFFFF"
        android:padding="6dp"
        android:textColor="@color/white"
        android:drawablePadding="20dp"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Type d'offre"
        android:inputType="textPassword"
        android:textColorHint="#80FFFFFF"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:padding="6dp"
        android:textColor="@color/white"
        android:drawablePadding="20dp"
      />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Matiere"
        android:inputType="textPassword"
        android:textColorHint="#80FFFFFF"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:padding="6dp"
        android:textColor="@color/white"
        android:id="@+id/userName"
        android:drawablePadding="20dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape"
        android:hint="Periode du ../../.. Au ../../.."
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textColorHint="#80FFFFFF"
        android:padding="6dp"
        android:inputType="textPassword"
        android:drawablePadding="20dp"
        android:textSize="16sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Ville"
        android:padding="6dp"
        android:background="@drawable/shape"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textColorHint="#80FFFFFF"
        android:textSize="16sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="@string/prix_heure"
        android:padding="6dp"
        android:background="@drawable/shape"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textColorHint="#80FFFFFF"
        android:textSize="16sp" />
        <Spinner
            android:id="@+id/planets_spinner"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Effacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Effacer"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:textSize="10dp"
            android:textStyle="bold"
            app:cornerRadius="40dp"
            app:backgroundTint="#A9D32F2F"
            />
        <com.google.android.material.button.MaterialButton
        android:id="@+id/BtnValider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_margin="10dp"
        android:text="Valider"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold"

            app:cornerRadius="40dp"
        app:backgroundTint="#9F689F38"
        />
</LinearLayout>
    </LinearLayout>
</LinearLayout>

</ScrollView>